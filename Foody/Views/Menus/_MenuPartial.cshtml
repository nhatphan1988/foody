@model System.Collections.Generic.List<FoodyDomain.Model.MenuEntity>
<div class="vendor-list">
    <div class="row">
        <div class="col-md-12">
            <div>
                <h2>Ăn vặt online</h2>
            </div>
            <ul class="vendor-cuisines">
                <li>Bánh Tráng</li>
                <li>Bò Bía</li>
                <li>Súp cua</li>
                <li>Hột vịt lộn xào me</li>
            </ul>
            <div class="text-left">
                <div class="row-text-center" data-toggle="collapse" data-target="#demo">
                    <i class="glyphicon glyphicon-list-alt active"></i>
                    <h3 class="inline bold" data-toggle="tooltip" title="Load menu!">Thực đơn</h3>
                </div>
                <div id="demo" class="in">
                    <div ng-controller="menuCtr">
                        @if (Model.Count > 0)
                        {
                            foreach (var menu in Model)
                            {
                                <div class="list-menu-item-info">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <img class="img-logo-small" src="@menu.ImageUrl" />
                                        </div>
                                        <div class="col-md-4">
                                            <div class="bold">@menu.Name</div>
                                            <div>@menu.Description</div>
                                        </div>
                                        <div class="col-md-4 text-center">
                                            <a ng-click="@("addCartItem('"+Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(menu))+"')")"><i class="glyphicon glyphicon-pencil active"></i></a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="list-menu-item-info">
                                <div class="row">
                                    <div class="col-md-12">
                                        Không tìm thấy
                                    </div>
                                </div>
                            </div>
                        }
                            </div>
                </div>
            </div>
        </div>
    </div>
</div>